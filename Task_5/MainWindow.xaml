<Window x:Class="Task_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_5"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Mouse_Down" 
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Змінити колір" HorizontalAlignment="Left" VerticalAlignment="Center" Width="180" Height="40" Grid.Row="1" Background="WhiteSmoke" Click="Button_Color" Margin="320,0,0,0" Grid.ColumnSpan="2"/>
        <Button Content="Змінити прозорість" HorizontalAlignment="Left" VerticalAlignment="Center" Width="180" Height="40" Grid.Row="2" Background="WhiteSmoke" Click="Button_Opacity" Margin="20,0,0,0" Grid.Column="1"/>
        <Button Content="Hello World" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="40" Grid.Row="3" Background="WhiteSmoke" Click="Button_Click_Hello" Margin="320,26,0,0" Grid.ColumnSpan="2"/>
        <Button x:Name="superButton" Content="Супер кнопка" HorizontalAlignment="Left" VerticalAlignment="Center" Width="310" Height="40" Grid.Row="4" Background="WhiteSmoke" Click="Button_Super" Grid.ColumnSpan="2" Margin="190,0,0,0"/>
        <CheckBox x:Name="checkColor" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Grid.Row="3" Click="CheckBox_Hello"/>
        <CheckBox x:Name="checkOpacity" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Grid.Row="2" Click="CheckBox_Opacity"/>
        <CheckBox x:Name="checkHello" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16" Grid.Row="1" Click="CheckBox_Color"/>
        <Button Grid.Column="1" Content="Х" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="25" Margin="251,0,0,0" Background="Red" Click="Button_CloseWindow" RenderTransformOrigin="0.515,0.193"/>

    </Grid>
</Window>
